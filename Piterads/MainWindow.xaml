    <Grid>
        <TextBlock Text="ВХОД"
           FontSize="250"
           FontWeight="Bold"
           Foreground="#E0E0E0"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           RenderTransformOrigin="0.5,0.5"
           Opacity="0.5" Margin="-23,-96,0,0">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.153"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <Border Width="450"
        Height="199"
        Background="#696969"
        CornerRadius="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

            <StackPanel Margin="20,20,20,10">

                <TextBox x:Name="LoginTextBox"
                         Height="40"
                         FontSize="16"
                         Padding="10,0,0,0"
                         VerticalContentAlignment="Center"
                         BorderThickness="0"
                         TextChanged="LoginTextBox_TextChanged"
                         Text="Логин"/>
                
