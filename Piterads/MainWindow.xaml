<Window x:Class="Piterads.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d"
Title="Вход" Height="450" Width="800"
WindowStartupLocation="CenterScreen"
Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="LinkButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <TextBlock>
                <ContentPresenter/>
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid>
                            <TextBlock Text="{TemplateBinding Tag}"
                           Foreground="#999999"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"
                           IsHitTestVisible="False"/>
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="PART_ContentHost" Property="Tag" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <TextBlock Text="ВХОД"
           FontSize="250"
           FontWeight="Bold"
           Foreground="#E0E0E0"
           HorizontalAlignment="Left"
           VerticalAlignment="Top"
           RenderTransformOrigin="0.5,0.5"
           Opacity="0.5" Margin="-23,-96,0,0">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.99999999999999989" ScaleY="0.99999999999999989"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.153"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <Border Width="450"
        Height="255"
        Background="#696969"
        CornerRadius="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

            <StackPanel Margin="40">

                <TextBox x:Name="LoginTextBox"
                 Height="40"
                 FontSize="16"
                 Padding="10,0,0,0"
                 VerticalContentAlignment="Center"
                 BorderThickness="0" TextChanged="LoginTextBox_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Foreground" Value="#999999"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Text" Value="Логин"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value=" ">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="Value">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Separator Height="20" Visibility="Hidden"/>
                <PasswordBox x:Name="PasswordBox"
                     Height="40"
                     FontSize="16"
                     Padding="0,0,0,0"
                     VerticalContentAlignment="Center"
                     BorderThickness="0" RenderTransformOrigin="0.504,0.513"/>

                <Separator Height="40" Visibility="Hidden"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button Content="Зарегистрироваться или"
                    Style="{StaticResource LinkButtonStyle}"
                    Click="RegisterButton_Click"
                    Foreground="White"
                    FontSize="14"/>

                    <Button x:Name="LoginButton"
                    Content="Войти"

                    Height="30"
                    Margin="5,0,0,0"
                    Background="#D2B48C"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    
                    Click="LoginButton_Click" Width="80"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
