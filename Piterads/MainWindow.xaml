                <Separator Height="20" Visibility="Hidden"/>
                <TextBox x:Name="PasswordTextBox"
                Height="40"
                FontSize="16"
                Padding="10,0,0,0"
                VerticalContentAlignment="Center"
                BorderThickness="0"
                    Text="Пароль">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Foreground" Value="#999999"/>
                            <Setter Property="Margin" Value="10,0,0,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value=" ">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=LoginTextBox}" Value="Value">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Resources>
                </TextBox>


                <Separator Height="10" Visibility="Hidden"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="right">

                    <Button Content="Зарегистрироваться или"
                    Foreground="White"
                    FontSize="14" Click="Button_Click" Cursor=""/>
                    <Button x:Name="LoginButton"
                    Content="Войти"

                    Height="21"
                    Background="#D2B48C"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Width="62" Click="LoginButton_Click"/>
                </StackPanel>
                <Separator Height="1" Visibility="Hidden"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="right">
                    <Button x:Name="AdminButton"
                    Content="Администратор"
                    Height="21"
                    Background="Transparent"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Width="105" Click="AdminButton_Click"/>

                </StackPanel>
            </StackPanel>
