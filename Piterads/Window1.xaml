    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Piterads" 
                           VerticalAlignment="Center" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"/>

                <Button Grid.Column="1" Content="Выход" 
                         
                        Foreground="#666666" 
                        Margin="0,0,15,0" Click="Button_Click_2"/>

                <Button Grid.Column="2" Content="Обратиться" 
                        Background="#F8C789" 
                        Foreground="Black" 
                        FontWeight="SemiBold"
                        Padding="20,5"
                        BorderThickness="0"
                        VerticalAlignment="Center" FontSize="14" Click="Button_Click"/>
            </Grid>
        </Border>

        <TextBlock Text="Piterads" 
                   Grid.Row="1"
                   FontSize="250"
                   FontWeight="Bold"
                   Foreground="#E0E0E0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   RenderTransformOrigin="0.5,0.5"
                   Opacity="0.5"/>

        <Grid Grid.Row="1" Margin="30,20,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" >
                <Border.Background>
                    <ImageBrush ImageSource="/Разработка брендбука HD.png" Stretch="UniformToFill"/>
                </Border.Background>
                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="Разработка брендбука" />
                    <Button Content="Подробнее" Click="Button_Click_1"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" >
                <Border.Background>
                    
                    <ImageBrush ImageSource="/Разработка фирменного стиля HD.png" Stretch="UniformToFill"/>
                    
                </Border.Background>
                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="Разработка фирменного стиля" />
                    <Button Content="Подробнее"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="2">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Разработка логотипа HD.png"/>
                </Border.Background>
                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="Разработка логотипа" />
                    <Button Content="Подробнее" />
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" >
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Наружная реклама HD.png"/>
                </Border.Background>
                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="Наружная реклама" />
                    <Button Content="Подробнее" />
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Интернет реклама HD.png"/>
                </Border.Background>
                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="Интернет реклама" />
                    <Button Content="Подробнее" />
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="2" >
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Разработка сайта HD.png"/>
                </Border.Background>
                <StackPanel VerticalAlignment="Bottom" Margin="15">
                    <TextBlock Text="Разработка сайта" />
                    <Button Content="Подробнее" />
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
