<Window x:Class="Piterads.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Разработка брендбука" Height="900" Width="1400"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StepBlockStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#F8C789"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="StepNumberStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F8C789"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="LineHeight" Value="50"/>
        </Style>

        <Style x:Key="StepTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Piterads" 
                           VerticalAlignment="Center" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"/>

                <Button Grid.Column="1" Content="Услуги" 
                        Style="{StaticResource HeaderButtonStyle}" 
                        Foreground="#666666" 
                        Margin="0,0,15,0" HorizontalAlignment="Right" Width="50" Click="Button_Click"/>

                <Button Grid.Column="2" Content="Обратиться" 
                        Background="#F8C789" 
                        Foreground="Black" 
                        FontWeight="SemiBold"
                        Padding="15,5"
                        BorderThickness="0"
                        VerticalAlignment="Center" Click="Button_Click_1"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Border>
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Разработка брендбука HD.png"/>
                </Border.Background>
            </Border>

            <TextBlock Text="Разработка брендбука" 
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Left" 
                       Foreground="White" 
                       FontSize="40" 
                       FontWeight="Bold"
                       Margin="30,0,0,20"/>
        </Grid>

        <Grid Grid.Row="2" Margin="30,30,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Что входит в брендбук?" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Margin="0,0,18,0"/>

                <TextBlock Grid.Column="1" 
                           Text="Наше агентство предоставляет услуги по созданию и разработке брендбука компании, разработке гайдлайна, логобука, ритейл-бука. Полное руководство по управлению брендом, фирменным стилем и логотипом позволяет сохранить единство и целостность образа во всех коммуникациях."
                           TextWrapping="Wrap" 
                           FontSize="16"
                           Foreground="#555555"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Tag="1" Style="{StaticResource StepBlockStyle}" >
                    <StackPanel>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=Tag}" Style="{StaticResource StepNumberStyle}"/>
                        <TextBlock Text="Архитектура бренда: ценности и миссия" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Tag="2" Style="{StaticResource StepBlockStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=Tag}" Style="{StaticResource StepNumberStyle}"/>
                        <TextBlock Text="Tone of voice / Сообщение ЦА и персоналии" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Tag="3" Style="{StaticResource StepBlockStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=Tag}" Style="{StaticResource StepNumberStyle}"/>
                        <TextBlock Text="Moodboard / Визуальный ДНК" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Tag="4" Style="{StaticResource StepBlockStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=Tag}" Style="{StaticResource StepNumberStyle}"/>
                        <TextBlock Text="Логотип и правила использования" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Tag="5" Style="{StaticResource StepBlockStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=Tag}" Style="{StaticResource StepNumberStyle}"/>
                        <TextBlock Text="Цвета, шрифты, сетки, графика" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="2" Tag="6" Style="{StaticResource StepBlockStyle}">
                    <StackPanel>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=Tag}" Style="{StaticResource StepNumberStyle}"/>
                        <TextBlock Text="Примеры применения: мерч, носители, презентации" Style="{StaticResource StepTextStyle}"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
